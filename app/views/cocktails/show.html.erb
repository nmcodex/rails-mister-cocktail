<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">

        <h1><%= @cocktail.name %></h1>


        <% if !@doses.nil? %>
          <h3>Recipe</h3>
          <ul>
            <% @doses.each do |dose| %>
              <li>
                <%= dose.ingredient.name %> - <%= dose.description %>
                <p><%= link_to "DELETE DOSE", dose_path(dose), method: :delete,
              data: { confirm: "Are you sure?" } %></p>
              </li>
            <% end %>
          </ul>
        <% end %>

        <h3>Add a dose</h3>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <% if @dose.errors.any? %>
            <div class="errors-container">
              <ul>
                <% @dose.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= f.association :ingredient, collection: Ingredient.all %>
          <%= f.input :description %>

          <%= f.submit "Add dose", class: "btn btn-primary" %>
        <% end %>


        <p>
          <%= link_to "Back to cocktail list", root_path %>
        </p>

    </div>
  </div>
</div>
